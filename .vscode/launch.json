{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    // Warning: as of 9/2/2025, this only works for the first test file, then
    // hangs forever, if there are more test files.
    {
      "name": "Tests",
      "request": "launch",
      "type": "node",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "deno",
      "runtimeArgs": [
        "test",
        "--inspect-brk",
        "--allow-env",
      ],
      "attachSimplePort": 9229,
    },
    {
      "name": "Debug current test",
      "request": "launch",
      "type": "node",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "deno",
      "runtimeArgs": [
        "test",
        "--inspect-brk",
        "--allow-env",
        "${file}",
      ],
      "attachSimplePort": 9229,
    },
  ],
}
