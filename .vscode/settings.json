{
  "deno.enable": false,
  "deno.lint": true,
  "deno.unstable": true,
  "files.autoSave": "afterDelay",
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "editor.insertSpaces": true,
  "editor.tabSize": 2,
  "[typescript]": {
    "editor.defaultFormatter": "dprint.dprint",
    "editor.formatOnSave": true,
    "editor.formatOnSaveMode": "file",
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
  },
  "[javascript]": {
    "editor.defaultFormatter": "dprint.dprint",
    "editor.formatOnSave": true,
    "editor.formatOnSaveMode": "file",
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
  },
  "[html]": {
    "editor.defaultFormatter": "dprint.dprint",
    "editor.formatOnSave": true,
    "editor.formatOnSaveMode": "file",
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
  },
  "[handlebars]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true,
    "editor.formatOnSaveMode": "file",
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
  },
  "[json]": {
    "editor.defaultFormatter": "dprint.dprint",
    "editor.formatOnSave": true,
    "editor.formatOnSaveMode": "file",
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
  },
  "[jsonc]": {
    "editor.defaultFormatter": "dprint.dprint",
    "editor.formatOnSave": true,
    "editor.formatOnSaveMode": "file",
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
  },
  "[markdown]": {
    "editor.defaultFormatter": "dprint.dprint",
    "editor.formatOnSave": true,
    "editor.formatOnSaveMode": "file",
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
  },
  "[vue]": {
    // As of 2024, dprint's vue formatter is not quite bug-free enough for my
    // liking. I expect it to get better soon.
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true,
    "editor.formatOnSaveMode": "file",
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
  },
  "[yaml]": {
    "editor.defaultFormatter": "dprint.dprint",
    "editor.formatOnSave": true,
    "editor.formatOnSaveMode": "file",
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
  },
  // cSpell settings go with the vscode extension that has the ID
  // streetsidesoftware.code-spell-checker
  "cSpell.words": [],
  // "cSpell.ignoreWords" is like "cSpell.words", except that words in
  // "cSpell.words" may appear in the spelling suggestions list, unlike the
  // words in "cSpell.ignoreWords"
  "cSpell.ignoreWords": [
    "dprint",
    "malva",
  ],
  "cSpell.enableFiletypes": ["vue"],
  "cSpell.languageSettings": [
    {
      "languageId": "vue",
      "dictionaries": ["html", "fonts", "typescript", "css"],
    },
  ],
  // We don't have .vue files so hybrid mode isn't needed. This will reduce
  // complication.
  "vue.server.hybridMode": false,
  "dprint.path": "./node_modules/.bin/dprint",
}
